{
    "name": "nigelhough/parkrun-reporter",
    "description": "A library for generating parkrun reports",
    "type": "library",
    "version": "0.0.1",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "parkrunReporter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "parkrunReporter\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "nigelhough/parkrun-scraper": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.4",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "check": [
            "@test",
            "@analyse",
            "@standards"
        ],
        "fix": [
            "phpcbf --standard=PSR12 src tests"
        ],
        "test": [
            "phpunit --configuration tests/phpunit.xml"
        ],
        "analyse": [
            "phpstan analyse --no-progress -c build/phpstan.neon"
        ],
        "standards": [
            "phpcs --standard=PSR12 src tests"
        ],
        "uptodate": [
            "@composer outdated -D --strict"
        ]
    }
}
